<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:padding="9dp"
    android:background="#BDB3B3"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_below="@+id/country_name"
            android:id="@+id/country_photo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:contentDescription="@string/action_settings"
            android:layout_centerInParent="true"
            android:src="@drawable/common_google_signin_btn_icon_dark"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/country_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="26sp"
            android:text="country_name"
            android:textColor="#ffffff"
            android:background="#90000000"
            android:textStyle="bold"

            android:layout_centerInParent="false"/>
        <TextView
            android:background="#65353434"
            android:textSize="20sp"
            android:text="jello ther ldslfndsoisdhfos
            sdfksdfosdfhoidsfhdoshfodfosidfhs
            sdfsodfhsdifhsodfhsdfhiosdhfsdhfosihdf
            sdfshiodfhsofhsoifhsifhsifhs
            sfsofsfoishfosdhfsf
            e"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_below="@id/country_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</android.support.v7.widget.CardView>